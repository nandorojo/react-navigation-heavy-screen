{
  "name": "react-navigation-heavy-screen",
  "version": "1.0.2",
  "description": "Optimize heavy screens to prevent lags with React Navigation.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example/ios && node -e \"process.exit(require('os').platform() === 'darwin')\" || pod install",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/nandorojo/react-navigation-heavy-screen",
  "author": "Fernando Rojo <frojo@sas.upenn.edu> (https://github.com/nandorojo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nandorojo/react-native-heavy-screen/issues"
  },
  "homepage": "https://github.com/nandorojo/react-native-heavy-screen#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.10.0",
    "@react-native-community/eslint-config": "^0.0.7",
    "@release-it/conventional-changelog": "^1.1.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.34",
    "@types/react-native": "^0.62.2",
    "commitlint": "^8.3.4",
    "eslint-config-nando": "^1.0.8",
    "husky": "^4.0.1",
    "jest": "^25.1.0",
    "react": "^16.13.1",
    "react-native": "~0.61.5",
    "react-native-reanimated": "^1.8.0",
    "release-it": "^12.6.3",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s",
      "tagName": "v%s"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.2"
  }
}
